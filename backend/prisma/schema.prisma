// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                Int            @id @default(autoincrement())
  email             String         @unique
  password          String
  address           String
  firstName         String
  lastName          String
  admin             Boolean        @default(false)
  isConfirmed       Boolean        @default(false)
  socketId          String?
  confirmationToken String?        @unique
  sellingItems      items[]        @relation("seller")
  wishlist          items[]        @relation("wishlist")
  orderHistory      orderHistory[]
  shoppingCart      items[]        @relation("shoppingcart")
  reviews           reviews[]
}

model items {
  id           Int            @id @default(autoincrement())
  name         String
  price        Decimal
  amount       Int
  description  String
  category     String
  averageRating Float?
  images       images[]
  seller       users[]        @relation("seller")
  wishlist     users[]        @relation("wishlist")
  orderHistory orderHistory[]
  shoppingCart users[]        @relation("shoppingcart")
  reviews      reviews[]
}

model images {
  id       Int    @id @default(autoincrement())
  imageUrl String
  itemId   Int
  item     items  @relation(fields: [itemId], references: [id])
}

model orderHistory {
  id          Int      @id @default(autoincrement())
  dateOrdered DateTime @default(now())
  userId      Int
  user        users    @relation(fields: [userId], references: [id])
  itemId      Int
  item        items    @relation(fields: [itemId], references: [id])
}

model reviews {
  id        Int      @id @default(autoincrement())
  dateAdded DateTime @default(now())
  rating    Int
  comment   String?
  userId    Int
  user      users    @relation(fields: [userId], references: [id])
  itemId    Int
  item      items    @relation(fields: [itemId], references: [id])
}

model message {
  id        Int      @id @default(autoincrement())
  message   String
  fromUser  Int
  toUser    Int
  createdAt DateTime @default(now())
}
